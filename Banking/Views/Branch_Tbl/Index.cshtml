@model IEnumerable<Banking.Models.Branch_Tbl>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutPageForAdmin.cshtml";
}

<h2>Branch Details</h2>
<style>
    .bgcolor {
        background-color:transparent;
    }
</style>
<p>
    @Html.ActionLink("Create New", "Create","", new { @class = "bgcolor" })
</p>
<table class="table table-bordered table-hover">
    <tr>
        <th class="bg-info">
           Bank Name
        </th>
        <th class="bg-info">
           IFSC Code
        </th>
        <th class="bg-info">
            Location
        </th>
        <th class="bg-info">
           City
        </th>
        <th class="bg-info"> Actions</th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.branch_name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ifsc_code)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.location)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.city)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.branchid }, new { @class = "bgcolor"  } ) |
            @Html.ActionLink("Details", "Details", new { id=item.branchid }, new { @class = "bgcolor" } ) |
            @Html.ActionLink("Delete", "Delete", new { id=item.branchid }, new { @class = "bgcolor" })
        </td>
    </tr>
}

</table>
