@model Banking.Models.Transaction_Tbl

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutPageForAdmin.cshtml";
}

<h2>Transaction</h2>
@*<center>*@
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">

    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    <div class="form-group">

        <div class="col-md-offset-2 col-md-10">
            <label>Account No</label>
            @Html.EditorFor(model => model.accountno, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.accountno, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">

        <div class="col-md-offset-2 col-md-10">
            <label>Withdraw Amount</label>
            @Html.EditorFor(model => model.withdraw, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.withdraw, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">

        <div class="col-md-offset-2 col-md-10">
            <label>Deposit Amount</label>
            @Html.EditorFor(model => model.deposit, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.deposit, "", new { @class = "text-danger" })
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Withdraw" name="btn" class="btn btn-danger " />
            <input type="submit" value="Deposit" name="btn" class="btn btn-info" />
            <input type="submit" value="Check" name="btn" class="btn btn-success" />
        </div>
    </div>
    <div class="form-group">
        
        <div class="col-md-offset-2 col-md-10">
            <label>Balance Amount</label>
            <input type="text" value="@ViewBag.Show" class="form-control" readonly />
        </div>
        <h1>@ViewBag.data</h1>
    </div>
    </div>
    }

@*</center>*@
